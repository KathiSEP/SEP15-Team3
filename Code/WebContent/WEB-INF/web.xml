<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>facesServlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>facesServlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>
  
  
  <context-param>
       <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
       <param-value>true</param-value>
    </context-param>
  <welcome-file-list>
    <welcome-file>facelets/open/index.xhtml</welcome-file>
  </welcome-file-list>

    <servlet>
    <servlet-name>UserPictureHandler</servlet-name> 
    <servlet-class>de.ofCourse.action.UserPictureHandler</servlet-class> 
    </servlet>
 <servlet-mapping>
    <servlet-name>UserPictureHandler</servlet-name>   
    <url-pattern>/profilImage</url-pattern>  
</servlet-mapping>
  
  <filter>

	<filter-name>EncodingFilter</filter-name>
	<filter-class>
		de.ofCourse.utilities.EncodingFilter
	</filter-class>

	<init-param>
		<param-name>encoding</param-name>
		<param-value>UTF-8</param-value>
	</init-param>

</filter>

<filter-mapping>
	<filter-name>EncodingFilter</filter-name>
	<url-pattern>/*</url-pattern>
</filter-mapping>

</web-app>